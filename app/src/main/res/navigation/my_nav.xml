<?xml version="1.0" encoding="utf-8"?>
    <navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_nav"
        app:startDestination="@id/mainFragment">


        <fragment
            android:id="@+id/cartFragment"
            android:name="com.example.shoppingcart.ui.CartFragment"
            android:label="fragment_cart"
            tools:layout="@layout/fragment_cart" >
            <action
                android:id="@+id/action_cartFragment_to_mainFragment"
                app:destination="@id/mainFragment" />
        </fragment>
        <fragment
            android:id="@+id/mainFragment"
            android:name="com.example.shoppingcart.ui.MainFragment"
            android:label="Shopping Items"
            tools:layout="@layout/fragment_main">
            <action
                android:id="@+id/action_mainFragment_to_cartFragment"
                app:destination="@id/cartFragment" />
        </fragment>
    </navigation>

